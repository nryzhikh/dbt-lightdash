{
  "image": "mcr.microsoft.com/devcontainers/python:3.13-bullseye",
  "forwardPorts": [
    8000, 8888
  ],
  "postCreateCommand": "pip install --no-cache-dir -r requirements.txt",
  "customizations": {
    "vscode": {
      "settings": {},
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance"
      ]
    }
  },
  "runArgs": ["--env-file",".devcontainer/devcontainer.env"],
  "remoteUser": "root"
}